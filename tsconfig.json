{
    "compilerOptions": {
        "declaration": true, // Generates .d.ts files
        "declarationMap": true, // Optional: Generates .d.ts.map for better debugging
        "emitDeclarationOnly": false, // Ensures both .js and .d.ts are emitted
        "outDir": "./lib", // Output folder for compiled files
        "moduleResolution": "node", // Ensures compatibility with Node.js modules
        "module": "CommonJS", // Adjust based on your project needs
        "target": "ES6", // Adjust based on your target
        "strict": true // Optional: Enables strict type checking
    },
    "include": [
        "src/**/*"
    ], // Specify source files to include
    "exclude": [
        "node_modules",
        "dist",
        "lib"
    ] // Exclude unnecessary files
}